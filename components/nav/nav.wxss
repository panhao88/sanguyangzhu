/* components/nav/nav.wxss */
.nav {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  box-sizing: border-box;
  padding-bottom: 27rpx;
  z-index: 1;
}
.back{
  position: absolute;
  width: 100%;
  z-index: -1;
  top: 0;
  left: 0;
}
.back-image{
  width: 100%;
  height: 100%;
}
.p-f{
  position: fixed;
}
.nav-title {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.return{
  width: 30rpx;
  height: 45rpx;
}