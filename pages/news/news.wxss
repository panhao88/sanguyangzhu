/* pages/news/news.wxss */
page {
  height: 100%;
  background: #f1f1f1;
}

.nav {
  width: 100%;
  height: 45rpx;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}

.nav-title {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  position: absolute;
  bottom: 30rpx;
  left: 0;
  z-index: 10;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.return {
  width: 30rpx;
  height: 45rpx;
  position: absolute;
  left: 32rpx;
}
.back {
  width: 750rpx;
  height: 128rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.hu {
  width: 686rpx;
  /* height: 293rpx; */
  background: #FFFFFF;
  box-shadow: 0px 0px 18rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin-top: 26rpx;
  margin-left: 32rpx;
}

.flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.xi {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #494949;
  margin-left: 26rpx;
  margin-top: 30rpx;
}

.shijian {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #898989;
  line-height: 50rpx;
  margin-right: 26rpx;
  margin-top: 30rpx;
}
.xia {
  width: 20rpx;
  height: 13rpx;
  margin-right: 50rpx;
  margin-top: 30rpx;
}
.content {
  padding: 0rpx 20rpx;
font-size: 28rpx;
font-family: PingFang SC;
font-weight: 500;
color: #898989;
line-height: 48rpx;
margin-top: 26rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:3; 
  -webkit-box-orient:vertical;
}
.contents {
  padding: 0rpx 20rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #898989;
  line-height: 48rpx;
  margin-top: 26rpx;
  text-overflow:ellipsis;
  word-wrap:break-word;
}
.you {
  width: 13rpx;
  height: 20rpx;
  margin-right: 26rpx;
}
.xuanzhuan {
  transform: rotate(180deg);
}